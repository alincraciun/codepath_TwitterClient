<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.tweetTweet.ComposeMessageActivity" android:background="@color/white">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMessageBody"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="What&apos;s happening?"
        android:gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/btTweet"
        android:layout_alignRight="@+id/btTweet"
        android:layout_alignEnd="@+id/btTweet"
        android:background="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/send_tweet"
        android:id="@+id/btTweet"
        android:textAllCaps="false"
        android:background="@drawable/send_button"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="8dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCharCounter"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/btTweet"
        android:layout_toLeftOf="@+id/btTweet"
        android:layout_toStartOf="@+id/btTweet"
        android:layout_marginRight="20dp"
        android:text="140"
        android:textColor="@color/light_grey"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
