<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="@color/twitter_azure" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="@color/twitter_azure" />
            <solid android:color="@color/twitter_azure"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="@color/normal_grey" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="@color/twitter_azure" />
            <solid android:color="@color/twitter_azure"/>
            <!--<gradient android:startColor="@color/twitter_azure" android:endColor="@color/twitter_azure" />-->
        </shape>
    </item>
</selector>